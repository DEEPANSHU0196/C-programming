#include<stdio.h>
int main()
{
    int a,b,sum;
    printf("Enter two Numbers");
    while(1)
    {
        printf("Enter First Number");
        scanf("%d",&a);
        if(a==0)
        break;
        printf("Enter Second Number");
        scanf("%d",&b);
        if(b==0)
        break;
        sum=sum+a+b;    //sum+=a+b 
    }
    printf("Sum of Numbers =%d",sum);
    return 0;
    }
