#include<stdio.h>
#include<stdlib.h>
int main ()
{
    int a,b,o,sum,sub,divide,multiply;
    do
{
        printf ("\nchoose the option -\n1.Add 2.Subtract 3.Multiply 4.Divide 5.Exit\n");
        scanf("\n%d",&o);
        printf("enter the value of the first integer ");
        scanf("\n%d",&a);
        printf("enter the value of the second integer ");
        scanf("\n%d",&b);
    switch(o)
{   
    case 1:sum=a+b;
            printf("Sum of no. =%d",sum);
            break;
    case 2: sub=a-b;
            printf("SUBTRACT of no. =%d",sub);
            break;
    case 3:multiply=a*b;
            printf("Multiply=%d",multiply);
            break;
    case 4:divide=a/b;
            printf("Divide=%d",divide);
            break;
    case 5:
            exit(0);
            
}
}
    while(o!=5);        
}
